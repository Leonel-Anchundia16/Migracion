<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <div class="card">
        <div class="card-header bg-dark text-center">
          <h3 class="text-white">Nueva Nota</h3>
        </div>
        <div class="card-body">
          <form action="/notes/new-note" method="POST">
            <div class="mb-3">
              <label for="title">Nombre:</label>
              <input
                type="text"
                name="title"
                class="form-control"
                placeholder="Nombre"
                autofocus
              />
            </div>
            <div class="mb-3">
              <label for="description">Descripción:</label>
              <textarea
                name="description"
                class="form-control"
                placeholder="Descripción"
              ></textarea>
            </div>
            <button class="btn btn-primary btn-block" type="submit">
              Guardar
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
