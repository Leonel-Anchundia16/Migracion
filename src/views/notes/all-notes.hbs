<div class="container">
  <div class="row">
    {{#each notes}}
    <div class="col-12 col-sm-6 col-md-4 col-lg-3">
      <div class="card mb-4">
        <div class="card-body">
          <h4 class="card-title d-flex justify-content-between align-items-center">
            {{ title }} <a href="/notes/edit/{{_id}}"><i class="fas fa-edit"></i></a>
          </h4>
          <p class="card-text">{{ description }}</p>
          <!-- DELETE REQUEST -->
          <form action="/notes/delete/{{_id}}?_method=DELETE" method="POST">
            <input type="hidden" name="_method" value="DELETE">
            <button type="submit" class="btn btn-danger btn-block btn-sm">Borrar</button>
          </form>
        </div>
      </div>
    </div>
    {{else}}
    <div class="col-12">
      <div class="card mx-auto">
        <div class="card-body">
          <h1>Hola {{user.name}}</h1>
          <p class="lead">Aquí se mostrarán tus Notas.</p>
          <a href="/notes/add" class="btn btn-success btn-block">¡Agrega Una!</a>
        </div>
      </div>
    </div>
    {{/each}}
  </div>
</div>
